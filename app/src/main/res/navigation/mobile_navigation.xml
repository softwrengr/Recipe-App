<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.fourtitude.recipeapp.ui.fragments.RecipeListFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_favourite"
        android:name="com.fourtitude.recipeapp.ui.fragments.FavouriteFragment"
        android:label="@string/title_favourite"
        tools:layout="@layout/fragment_home" />



    <fragment
        android:id="@+id/navigation_add"
        android:name="com.fourtitude.recipeapp.ui.fragments.AddRecipeFragment"
        android:label="@string/title_add"
        tools:layout="@layout/fragment_notifications" />
</navigation>